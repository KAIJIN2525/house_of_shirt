# Server Configuration
PORT=9000

# Database
MONGODB_URI=your_mongodb_connection_string

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Session Secret
SESSION_SECRET=your_session_secret_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:9000/api/users/auth/google/callback

# Frontend URL (for CORS and OAuth redirect)
# Development
FRONTEND_URL=http://localhost:5173
# Production: Set this in Vercel environment variables
# FRONTEND_URL=https://house-of-shirt-axfe.vercel.app

# Paystack Payment Gateway
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Stripe Payment Gateway
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Email Configuration
# Choose one: gmail, mailtrap, or smtp (custom SMTP)
EMAIL_SERVICE=mailtrap
EMAIL_FROM=noreply@houseofshirt.com

# For Gmail (Recommended for Production - Use App Password!)
# 1. Enable 2-Step Verification in Google Account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail"
# 4. Use the 16-character password below
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-16-character-app-password

# For Mailtrap (Development/Testing Only)
MAILTRAP_HOST=smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USER=your_mailtrap_user
MAILTRAP_PASS=your_mailtrap_password

# For Custom SMTP (SendGrid, Mailgun, AWS SES, etc.)
# IMPORTANT: Use port 587 (not 465) for better compatibility with hosting providers like Vercel
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# Admin email for low stock alerts
ADMIN_EMAIL=admin@houseofshirt.com

# Cloudinary (if used for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Mailtrap (if used for email notifications)
MAILTRAP_TOKEN=your_mailtrap_token
